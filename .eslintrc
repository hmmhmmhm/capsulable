{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "env": {
        "node": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "strict": 0,
        "linebreak-style": [
            "error", "unix"
        ],
        "quotes": [
            "error", "single", {
                "allowTemplateLiterals": true
            }
        ],
        "semi": [
            "error", "never"
        ],
        "no-console": 0
    }
}
